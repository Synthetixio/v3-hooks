{
  "name": "@synthetixio/v3-hooks",
  "version": "0.0.0",
  "main": "index.js",
  "repository": "synthetixio/v3-hooks",
  "author": "Synthetix",
  "license": "MIT",
  "private": true,
  "files": [
    "index.js",
    "lib"
  ],
  "scripts": {
    "start:ethers": "webpack-cli serve --config webpack.ethers.config.js",
    "build:ethers": "NODE_ENV=production webpack-cli --config webpack.ethers.config.js",
    "start:viem": "webpack-cli serve --config webpack.viem.config.js",
    "build:viem": "NODE_ENV=production webpack-cli --config webpack.viem.config.js",
    "codegen": "node codegen && biome format lib/deployments --write",
    "pretty": "biome format . --write",
    "pretty:check": "biome format .",
    "lint": "biome lint . --apply",
    "lint:check": "biome lint .",
    "base:mainnet": "anvil --fork-url https://mainnet.base.org --port 4001",
    "base:sepolia": "anvil --fork-url https://sepolia.base.org --port 4002",
    "cy": "NODE_ENV=test cypress open --component --browser chrome",
    "cy:check": "NODE_ENV=test cypress run --component --browser chrome",
    "e2e": "CYPRESS_SYNTHETIX_PRESET=andromeda NODE_ENV=test cypress open --e2e --browser chrome",
    "e2e:check": "CYPRESS_SYNTHETIX_PRESET=andromeda NODE_ENV=test cypress run --e2e --browser chrome",
    "deploy": "rm -rf dist && yarn build:ethers && yarn build:viem && gh-pages --dist dist --branch gh-pages --message 'Deploy' --no-history"
  },
  "dependencies": {
    "@synthetixio/v3-contracts": "^4.0.0",
    "@tanstack/react-query": "^5.24.1",
    "debug": "^4.3.4",
    "react": "^18.2.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@biomejs/biome": "1.5.3",
    "@cypress/code-coverage": "^3.12.26",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.11",
    "@tanstack/react-query-devtools": "^5.24.1",
    "babel-loader": "^9.1.3",
    "babel-plugin-istanbul": "^6.1.1",
    "chrome-remote-interface": "^0.33.0",
    "copy-webpack-plugin": "^12.0.2",
    "cypress": "^13.6.6",
    "ethers": "^5.7.2",
    "gh-pages": "^6.1.1",
    "html-webpack-plugin": "^5.6.0",
    "nyc": "^15.1.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "viem": "^2.7.15",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.0.0"
  },
  "packageManager": "yarn@4.1.0"
}
